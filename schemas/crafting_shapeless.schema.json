{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Minecraft 1.21.10 Recipe (Shapeless)",
  "description": "Robust validation schema for Minecraft 1.21.10 Fabric shapeless recipes",
  "type": "object",
  "required": ["type", "ingredients", "result"],
  "properties": {
    "type": {
      "const": "minecraft:crafting_shapeless"
    },
    "ingredients": {
      "type": "array",
      "minItems": 1,
      "maxItems": 9,
      "items": {
        "oneOf": [{ "$ref": "#/$defs/item_ref" }, { "$ref": "#/$defs/tag_ref" }]
      }
    },
    "result": {
      "oneOf": [
        { "$ref": "#/$defs/item_ref" },
        {
          "type": "object",
          "properties": {
            "item": {
              "type": "string",
              "pattern": "^[a-z0-9_.-]+:[a-z0-9_/.-]+$"
            },
            "count": {
              "type": "integer",
              "minimum": 1,
              "maximum": 64
            }
          }
        }
      ]
    },
    "group": { "type": "string" },
    "priority": { "type": "integer" },
    "show_notification": { "type": "boolean" }
  },
  "$defs": {
    "item_ref": {
      "type": "string",
      "pattern": "^[a-z0-9_.-]+:[a-z0-9_/.-]+$"
    },
    "tag_ref": {
      "type": "object",
      "properties": {
        "tag": {
          "type": "string",
          "pattern": "^[a-z0-9_.-]+:[a-z0-9_/.-]+$"
        }
      },
      "required": ["tag"]
    }
  },
  "additionalProperties": false
}
