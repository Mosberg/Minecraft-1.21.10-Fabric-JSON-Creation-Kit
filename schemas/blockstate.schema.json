{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Minecraft 1.21.10 Blockstate",
  "description": "Robust validation schema for Minecraft 1.21.10 blockstates with variant support and extensibility",
  "type": "object",
  "required": ["variants"],
  "properties": {
    "variants": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^$|^([a-z0-9_]+)((=[a-z0-9_/.-]+)*)$": {
          "oneOf": [
            {
              "$ref": "#/$defs/model_variant"
            },
            {
              "type": "array",
              "minItems": 1,
              "maxItems": 16,
              "items": {
                "$ref": "#/$defs/model_variant"
              }
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "multipart": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["when", "apply"],
        "properties": {
          "when": {
            "type": "object",
            "properties": {
              "OR": {
                "type": "array",
                "items": { "$ref": "#/$defs/state_condition" }
              },
              "AND": {
                "type": "array",
                "items": { "$ref": "#/$defs/state_condition" }
              }
            },
            "oneOf": [
              { "required": ["OR"] },
              { "required": ["AND"] },
              {
                "patternProperties": {
                  "^[a-z0-9_]+$": { "$ref": "#/$defs/state_value" }
                }
              }
            ],
            "additionalProperties": false
          },
          "apply": {
            "$ref": "#/$defs/model_variant"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "$defs": {
    "state_value": {
      "type": ["string", "integer", "boolean", "null"],
      "pattern": "^[a-z0-9_/.-]+$|^true$|^false$|^null$"
    },
    "state_condition": {
      "type": "object",
      "patternProperties": {
        "^[a-z0-9_]+$": { "$ref": "#/$defs/state_value" }
      },
      "additionalProperties": false
    },
    "model_variant": {
      "type": "object",
      "required": ["model"],
      "properties": {
        "model": {
          "type": "string",
          "pattern": "^(minecraft|[a-z0-9_.-]+):block/[a-z0-9_./-]+$"
        },
        "x": { "type": "integer", "enum": [0, 90, 180, 270] },
        "y": {
          "type": "number",
          "multipleOf": 90,
          "minimum": 0,
          "maximum": 360
        },
        "uvlock": { "type": "boolean" },
        "weight": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    }
  },
  "oneOf": [{ "required": ["variants"] }, { "required": ["multipart"] }],
  "additionalProperties": false
}
