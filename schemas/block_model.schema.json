{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Minecraft 1.21.10 Block Model",
  "description": "Robust validation schema for Minecraft 1.21.10 block models with reusable components and forward-compatibility",
  "type": "object",
  "oneOf": [
    { "$ref": "#/$defs/parented_model" },
    { "$ref": "#/$defs/custom_model" }
  ],
  "$defs": {
    "texture_ref": {
      "type": "string",
      "pattern": "^(#\\w+|minecraft:block/|^[a-z0-9_.-]+:block/)[a-z0-9_./-]+$"
    },
    "vector3": {
      "type": "array",
      "items": { "type": "number", "minimum": -32, "maximum": 32 },
      "minItems": 3,
      "maxItems": 3
    },
    "block_bounds": {
      "$ref": "#/$defs/vector3",
      "items": { "type": "number", "minimum": 0, "maximum": 16 }
    },
    "rotation_origin": {
      "$ref": "#/$defs/vector3",
      "items": { "type": "number", "minimum": -16, "maximum": 32 }
    },
    "face_direction": {
      "enum": ["north", "east", "south", "west", "up", "down"]
    },
    "parented_model": {
      "type": "object",
      "required": ["parent"],
      "properties": {
        "parent": {
          "type": "string",
          "pattern": "^(minecraft|[a-z0-9_.-]+):block/(cube_(all|column|column_horizontal)|oriented|cross|fire|rail|door|trapdoor|button|pressure_plate|slab|stairs|wall|fence|fence_gate|pane|skull|banner|sign)$"
        },
        "textures": {
          "type": "object",
          "patternProperties": {
            "^(particle|down|up|north|east|south|west|all?|side?|end?)$": {
              "$ref": "#/$defs/texture_ref"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "custom_model": {
      "type": "object",
      "required": ["elements"],
      "properties": {
        "textures": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9_]+$": { "$ref": "#/$defs/texture_ref" }
          },
          "additionalProperties": false
        },
        "elements": {
          "type": "array",
          "minItems": 1,
          "maxItems": 32,
          "items": {
            "type": "object",
            "required": ["from", "to"],
            "properties": {
              "from": { "$ref": "#/$defs/block_bounds" },
              "to": { "$ref": "#/$defs/block_bounds" },
              "rotation": {
                "type": "object",
                "properties": {
                  "origin": { "$ref": "#/$defs/rotation_origin" },
                  "axis": { "enum": ["x", "y", "z"] },
                  "angle": { "enum": [-45, -22.5, 22.5, 45] },
                  "rescale": { "type": "boolean" }
                },
                "additionalProperties": false,
                "required": ["origin", "axis", "angle"]
              },
              "faces": {
                "type": "object",
                "patternProperties": {
                  "^(north|east|south|west|up|down)$": {
                    "type": "object",
                    "properties": {
                      "texture": { "$ref": "#/$defs/texture_ref" },
                      "cullface": { "$ref": "#/$defs/face_direction" },
                      "rotation": {
                        "type": "integer",
                        "enum": [0, 90, 180, 270]
                      },
                      "tintindex": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 63
                      },
                      "uv": {
                        "type": "array",
                        "items": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 16
                        },
                        "minItems": 4,
                        "maxItems": 4
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false,
                "minProperties": 1
              },
              "shade": { "type": "boolean" }
            },
            "additionalProperties": false
          }
        },
        "display": {
          "type": "object",
          "patternProperties": {
            "^(gui|ground|fixed|thirdperson_(lefthand|righthand)|firstperson_(lefthand|righthand)|head|none)$": {
              "type": "object",
              "properties": {
                "rotation": { "$ref": "#/$defs/vector3" },
                "translation": { "$ref": "#/$defs/vector3" },
                "scale": { "$ref": "#/$defs/vector3" }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
